#View all hdfs files:
hdfs dfs

# List the root HDFS directory #
hdfs dfs -ls  /

# List a specific directory #
hdfs dfs -ls /directory

# List Recursively #
hdfs dfs -ls -R /

# to check file count rows
hdfs dfs -cat /hiveexercises2 |wc -l;

# Delete a file #
hdfs dfs -rm /filemname

#distcp

# Create a directory #
hdfs dfs -mkdir /test
